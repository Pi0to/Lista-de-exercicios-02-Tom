
#include <stdio.h>

int main() {
   
    float n, nf = 0;
   
    for (int i = 0; i < 3; i++){
        printf("Digite a nota referente ao %dÂ° trabalho: ", i+1);
        scanf("%f", &n);
        
        if (n > 2 || n < 0) {
            printf("Nota invalida! Tente novamente\n\n");
            i--;
        }
        else nf += n;
    }
    
    while (1) {
        printf("Digite a nota referente a prova: ");
        scanf("%f", &n);
        
        if (n > 3 || n < 0) {
            printf("Nota invalida! Tente novamente");
        }
        else {
            nf += n;
            break;
        }
            
    }
    
    if (nf >= 6) printf ("Aprovado!");
    else printf ("Reprovado");
    
    return 0;
}
